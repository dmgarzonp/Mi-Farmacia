{
  "name": "mi-farmacia",
  "version": "0.0.0",
  "main": "electron.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:angular": "ng serve",
    "start:electron": "NODE_ENV=development electron . --no-sandbox",
    "dev": "concurrently \"npm run start:angular\" \"wait-on http://localhost:4200 && npm run start:electron\"",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "electron:build": "npm run build:prod && electron-builder",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "build": {
    "appId": "com.mifarmacia.app",
    "productName": "Mi Farmacia",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "node-forge": "^1.3.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "xmlbuilder": "^15.1.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jasmine": "~5.1.0",
    "@types/jspdf": "^1.3.3",
    "@types/xlsx": "^0.0.35",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.3"
  }
}
